{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/FreeRTOS/Demo/CORTEX_MPU_M3_MPS2_QEMU_GCC/build/RTOSDemo.axf",   //被调试的程序
            "MIMode": "gdb",
            "miDebuggerPath": "/home/hong/code/gcc-arm-none-eabi-10-2020-q4-major/bin/arm-none-eabi-gdb",  //指定使用的 gdb
            "miDebuggerServerAddress": "localhost:1234",  //连接到 qemu 进行调试
            //"preLaunchTask": "qemu",
            //"postDebugTask": "killallqemu",
            "cwd": "${workspaceRoot}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
   ]
}